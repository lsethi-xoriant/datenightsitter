<h4>Sitting Availability Responses</h4>
<table class='table table-hover'>
  <tr>
    <th>id</th>
    <th>Sitter</th>
    <th>Parent</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>
  <% @sittings.each do |s| %>
    <tr>
      <td><%= s.id %></td>
      <td><%= s.provider.full_name unless s.provider.nil? %></td>
      <td><%= s.seeker.full_name unless s.seeker.nil? %></td>
      <td><%= s.status %></td>
      <td>
        <%= form_tag( fire_status_event_admin_sitting_path(s.id),
                      :authenticity_token => true, 
                      :method => :post,
                      :remote => true ) do |f| %> 
            <%= select_tag "fire_status_event",
                        options_for_select(s.status_events),  #set available events based on current status
                        :class => "submit-onchange phone-visible",
                        :include_blank => true %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>